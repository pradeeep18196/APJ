@using WebApplication.Areas.Admin.Models
@model ApplicationForm


@using (Html.BeginForm("Delete_Student", "Admission"))
{<br />
    <div class="panel panel-primary">
        <div class="panel-heading">Delete Student</div>
        <br />
        <div class="panel-body">
            <label>Application No / Aadhar No</label>
            <input type="text" class="form-control" name="appno"><br />
            <button type="button" name="submitbtn" data-toggle="modal" data-target="#exampleModalLong" value="Search" class="btn btn-info">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
        </div>
        <br />
    </div>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3>Are you want to delete this Application</h3>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary">OK</button>
                    <a class="btn btn-primary" href="/Admin/Admission/DeleteStudent">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}

