@using Microsoft.AspNetCore.Identity
@using WebApplication.Models
@using WebApplication.Data


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" >
            <li>
                @*<a asp-area="" asp-controller="Manage" asp-action="Index" style="color:white" class="glyphicon glyphicon-user" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
                <span class="glyphicon glyphicon-user" style="color:white"></span>
                <input type="button" class="btn btn-link navbar-btn navbar-link" style="color:white" value="Hello @UserManager.GetUserName(User)" />
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color:white">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">      
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
